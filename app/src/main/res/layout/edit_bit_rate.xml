<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<EditText
	android:id="@+id/edtBitRate"
	android:layout_width="300dp"
	android:layout_height="40dp"
	android:layout_centerHorizontal="true"
	android:layout_marginTop="20dp"
	android:layout_marginLeft="12dp"
	android:layout_marginRight="12dp"
	android:background="@drawable/email_input_selector"
	android:hint="@string/str_input_bit_rate"
	android:inputType="textEmailAddress"
	android:paddingLeft="80dp"
	android:textColor="#000000"
	android:textColorHint="#C9CACA"
	android:textSize="14dp" />

	<Button
		android:id="@+id/btModify"
		android:layout_width="120dp"
		android:layout_height="40dp"
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/edtBitRate"
		android:layout_marginTop="20dp"
		android:text="@string/str_modify"
		android:background="@drawable/save_button_selector"
		android:textColor="#FFFFFFFF"
		android:textSize="14dp" />

	<TextView
		android:id="@+id/txt_empty"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/btModify"
		android:text=""
		android:textColor="#FFFFFFFF"
		android:textSize="17sp" />

</RelativeLayout>
